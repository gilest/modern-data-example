<h1>Articles</h1>

<article>
  {{#each @model.data as |article|}}
    <h2>{{article.title}}</h2>
    <span>By {{article.author.firstName}} {{article.author.lastName}}</span>

    <h3>Comments</h3>
    {{#each article.comments as |comment|}}
      <figure>
        {{comment.body}}<br />
        -
        {{#if comment.author.firstName}}
          {{comment.author.firstName}}
          {{comment.author.lastName}}
        {{else}}
          Unloaded person, id: {{comment.author.id}}
        {{/if}}
      </figure>
    {{/each}}
  {{/each}}
</article>